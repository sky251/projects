<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="image_preview_sale_order_form_view" model="ir.ui.view">
        <field name="name">image.preview.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Image Preview">
                    <field name="image_ids">
                        <tree>
                            <field name="image" style="width:8rem;" widget="image"/>
                        </tree>
                        <form>
                            <group>
                                <field name="image"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>