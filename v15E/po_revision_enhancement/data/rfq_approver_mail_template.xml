<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <record id="rfq_approver_mail_template" model="mail.template">
            <field name="name">RFQ Approver mail template</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="subject">Approve Revised PO</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; border:1px solid black;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello <t t-out="object.rfq_approver_id.name"/>,
                        <br/>
                        <br/>
                        Approve
                        <strong t-out="object.name"/>
                        Revised PO between <strong t-out="object.from_apporoval_datetime.strftime('%m/%d/%Y')" /> to <strong t-out="object.to_apporoval_datetime.strftime('%m/%d/%Y')"/> .
                        <br/>
                        <br/>
                        Regards,
                        <br/>
                        <strong t-out="user.name"/>
                    </p>
                </div>
            </field>
        </record>
    </data>

</odoo>